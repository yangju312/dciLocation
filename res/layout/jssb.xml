<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bigback"
    android:orientation="vertical"
    tools:context=".GISLocationActivity" >
   <RelativeLayout
       android:id="@+id/sssss"
       android:layout_height="50dp"
       android:layout_marginTop="5dp"
       android:layout_width="wrap_content"
         android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"> 
 <Button android:id="@+id/xjbg"  android:layout_width="fill_parent" 
                    android:layout_height="50dp"
                    android:background="@drawable/bak"
                    android:text="@string/xj"
                    android:textSize="25sp"/>
              
     </RelativeLayout>   



   <ListView
       android:id="@+id/sblist"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@id/sssss"
       android:drawSelectorOnTop="false"
       android:scrollbars="vertical"
       android:background="@drawable/bigback" />

</RelativeLayout>
