<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
       <!-- <item name="android:windowBackground">@color/alpha_bg</item>背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
	<style name="normalText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">14sp</item>
	</style>
	 <style name="layout_full">  
    <item name="android:layout_width">fill_parent</item>  
    <item name="android:layout_height">fill_parent</item>  
  </style>
   <style name="layout_wrap">  
    <item name="android:layout_width">wrap_content</item>  
    <item name="android:layout_height">wrap_content</item>  
  </style>
  <style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:button">@null</item>  
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
    </style>
   <style name="main_footbar_radio" parent="footbar">
        <item name="android:background">@drawable/widget_bar_bg</item>
        <item name="android:padding">0dip</item>
    </style>
    <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="main_footbar_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/widget_bar_bg</item>
        <item name="android:clickable">true</item>
    </style>
<!-- 横向分布-->
  <style name="layout_horizontal" parent="layout_full">  
    <item name="android:layout_width">0px</item>  
  </style> 
    
<!-- 纵向分布-->
  <style name="layout_vertical" parent="layout_full">  
    <item name="android:layout_height">0px</item>  
  </style> 
</resources>